<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
style="@style/rr_base_layout_style"
android:orientation="vertical">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:fitsSystemWindows="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tagread"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/register"
                    android:clickable="true"
                    android:paddingTop="40dp"
                    />



            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tagread"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/Imageview_user"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:background="@color/back"
                    android:padding="8dp"
                    android:src="@drawable/user"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/EPCID"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignBottom="@+id/Imageview_user"
                    android:layout_toRightOf="@+id/Imageview_user"
                    android:background="#dadada"
                    android:layout_alignParentTop="true"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textSize="60px" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/Imageview_user5"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:background="@color/back"
                    android:padding="8dp"

                    android:src="@drawable/user"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/P_ID"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/Imageview_user5"
                    android:layout_toRightOf="@+id/Imageview_user5"
                    android:background="#dadada"
                    android:hint="Enter Product ID"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textSize="60px" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative5"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/Imageview_pass"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:background="@color/back"
                    android:padding="8dp"
                    android:src="@drawable/passicon"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/P_name"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignBottom="@+id/Imageview_pass"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/Imageview_pass"
                    android:background="#dadada"
                    android:hint="Enter Product Name"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textSize="60px" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/Imageview_pass1"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:background="@color/back"
                    android:padding="8dp"
                    android:src="@drawable/passicon"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/P_type"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_alignBottom="@+id/Imageview_pass1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/Imageview_pass1"
                    android:background="#dadada"
                    android:hint="Enter Quantity    "
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textSize="60px" />
                <RelativeLayout

                    android:id="@+id/rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_toRightOf="@+id/P_type"
                    android:background="#dadada"
                    >
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                     />
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/tagregister"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/relative3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="#ff6a00"
                android:layout_centerHorizontal="true"
                android:text="REGISTER"
                android:textSize="70px"
                android:textColor="@color/white" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>

    </ScrollView>
</RelativeLayout>




